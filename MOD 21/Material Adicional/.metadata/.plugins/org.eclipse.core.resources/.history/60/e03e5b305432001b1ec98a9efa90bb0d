package com.educacionIT.javase.principal;

/**
 * @author EducacionIT
 * @class Auto
 * @date 10 jun. 2020
 * 
 */
class Auto {
	String color;
	String marca;
	String patente;
	boolean encendido;

	// devuelve una cadena de caracteres con las caracteristicas que posea el objeto
	public String mostrarDatos() {
		String mensaje = "El Auto es de color " + color + ", marca " + marca 
				+ ", patente " + patente + " y se encuentra " 
				+ ((encendido) ? "encendido" : "apagado");

		// la palabra reservada return le indica al metodo que finalizo su ejecuion 
		// y que devuelva el objeto mensaje
		return mensaje;
	}

	//cambia el estado del atributo encendido sin devolver ningun dato
	public void cambiarEstado(boolean encendido){
		this.encendido = encendido;
	}

}